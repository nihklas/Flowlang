for var i = 0; i < 10; i = i + 1 {
    print("i: " . i);
}

var i = 0;
for ;; {
    if i == 5 {
        break;
    }

    print("In loop: " . i);
    i = i + 1;
}

for var i = 0; i < 10; i = i + 1 {
    if i % 2 == 0 {
        continue;
    }

    print("Uneven: " . i);
}

i = 0;
for {
    if i == 5 {
        break;
    }

    print("infinite loop count: " . i);
    i += 1;
}

i = 0;
for i < 2 {
    print("only loop condition");
    i += 1;
}

